script_dir=$(dirname "$0")
config_file="${script_dir}/../config.cfg"

if [ "$#" -lt 1 ]
then
    echo
    echo "Usage: $0 NUM_NEWEST_CONSENSUSES"
    echo
    exit 1
fi

num="$1"

# Try to parse config.cfg.

while IFS="= " read var val
do
    if [[ "$var" == \[*] ]]
    then
        section="$var"
    elif [[ $val ]]
    then
        declare "$var$section=$val"
    fi
done < "$config_file"

# Turn relative into absolute path.

if [[ "$Consensuses" != /* ]]
then
    Consensuses="${script_dir}/${Consensuses}"
fi

# Now that we know where the consensus archives are, find most recent n
# consensuses.

mkdir -p "$Consensuses"
find "$Consensuses" -type f | sort | tail -"$num"
